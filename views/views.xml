<odoo>
  <data>
    <record model="ir.ui.view" id="session_view_list">
      <field name="name">Session List</field>
      <field name="model">open_academy.session</field>
      <field name="priority" eval="16"/>
      <field name="arch" type="xml">
        <tree string="Session List">
          <field name="course_name"/>
          <field name="instructor"/>
          <field name="start_time"/>
          <field name="duration"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="course_view_form">
      <field name="name">Course Form</field>
      <field name="model">open_academy.course</field>
      <field name="priority" eval="16"/>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="level"/>
            </group>
            <group>
              <field name="instructor"/>
            </group>
            <notebook>
              <page string="General Information">
                <field name="name"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="course_list">
      <field name="name">Courses</field>
      <field name="res_model">open_academy.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="session_list">
      <field name="name">Sessions</field>
      <field name="res_model">open_academy.session</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Open Academy" id="open_academy.menu_root"/>

    <!-- actions -->

    <menuitem name="Courses" id="open_academy.course_menu_list" parent="open_academy.menu_root" action="open_academy.course_list"/>
    <menuitem name="Sessions" id="open_academy.session_menu_list" parent="open_academy.menu_root" action="open_academy.session_list"/>

  </data>
</odoo>